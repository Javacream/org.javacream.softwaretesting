storeservice_test_suite:
    # static fixture: # ausgeführt exakt einmal, nur in Ausnahmefällen zu empfehlen
    fixture: # ausgeführt vor jedem Test Case
        storeservice = StoreService()
    get_stock_test_suite:
        # fixture:
            storeservice = StoreService()
        retrieves_stock:
            # fixture:
                storeservice = StoreService()
            # store_service = StoreService() # Nie so, zu testende Objekte immer in einer Fixture
            category='books'
            item='4711'
            stock = storeservice.get_stock(category, item)
            assert_true(stock >= 0)
        signals_error_if_category_is_undefined:
            category=None
            item='4711'
            result = storeservice.get_stock(category, item)
            assert_failure(result)
        signals_error_if_item_is_undefined:
            category='books'
            item=None
            result = storeservice.get_stock(category, item)
            assert_failure(result)
        signals_error_if_item_is_empty:
            category='books'
            item=''
            result = storeservice.get_stock(category, item)
            assert_failure(result)
        signals_error_if_category_is_empty:
            category=''
            item='4711'
            result = storeservice.get_stock(category, item)
            assert_failure(result)
