storeservice_tests:
    context:
        storeService=StoreService()
    storeservice_retrieves_stock:
        category='books'
        item='4711'
        stock = storeService.get_stock(category, item)
        assert_true(stock >= 0)
    storeservice_signals_error_if_category_is_undefined:
        category=None
        item='4711'
        result = storeService.get_stock(category, item)
        assert_failure(result)
    storeservice_signals_error_if_item_is_undefined:
        category='books'
        item=None
        result = storeService.get_stock(category, item)
        assert_failure(result)
    storeservice_signals_error_if_item_is_empty:
        category='books'
        item=''
        result = storeService.get_stock(category, item)
        assert_failure(result)
    storeservice_signals_error_if_category_is_empty:
        category=''
        item='4711'
        result = storeService.get_stock(category, item)
        assert_failure(result)
